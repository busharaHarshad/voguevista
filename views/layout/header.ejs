<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
  <link rel="stylesheet" href="CSS/style.css"> 
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/magnific-popup.css">
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/jquery.magnific-popup.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>


 
</head>
<body>
<header>
  <nav class="navbar navbar-expand-lg ">
    <div class="container">
      <!-- Left-aligned logo in the top-left corner -->
      <div class="navbar-brand">
        <a href="/home">
            <img class="imagelogo" src="img/logobase.png" alt="Logo">
            <span class="logo-name">Vogue Vista</span>
        </a>
    </div>
    
      <!-- Centered search area in the navbar -->
      <div class="search-area col-5">
        <form class="form-inline my-2 my-lg-0">
          <div class="input-group search-input">
            <input class="form-control" type="text" placeholder="Search for your choices"  name="search">
            <div class="input-group-append">
              <span class="input-group-text searchlen">
                <button type="submit" class="btn btn-link d-md-inline" aria-label="Search">
                  <i class="fa-solid fa-magnifying-glass text-dark" name="search"></i>
                </button>
              </span>
            </div>
          </div>
        </form>
      </div>

      <!-- Toggler/collapsible Button for small screens -->
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" 
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span><i class="fa-solid fa-bars"></i></span>
      </button>
      <!-- Navbar links -->
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="about">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="contact">Contact</a>
          </li> 
          
          <li class="nav-item">
            <a class="nav-link" href="cart">
              <i class="fa-solid fa-cart-shopping "></i></a>
          </li>
        <li class="nav-item" id="login-link">
          <% if (locals.user) { %>
              <div class="user-dropdown">
                <a class="nav-link" href="login">
                  <i class="fa-regular fa-user"></i>
                  <%= locals.user.name %>
                </a>
                <div class="dropdown-content">
                  <!-- List of items to display when hovering -->
                  <ul>
                    <li><a href="profile">Profile</a></li>
                    <li><a href="wishlist">Wishlist</a></li>
                    <li><a href="order">Orders</a></li>
                    <li><a href="logout">Logout</a></li>
                    <!-- Add more items as needed -->
                  </ul>
                </div>
              </div>
           
          <% } else { %>
        
            <a class="nav-link" href="login">
              <i class="fa-regular fa-user"></i>
              Login
            </a>
          <% } %>
        </li>
     
    
        
        </ul>
      </div>
    </div>
  </nav>
   <!-- Secondary Navbar with Centered Buttons -->
   
 