<%- include('../layout/header.ejs') %>

<div >

<div class="d-flex" id="wrapper">
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="username-box">
            <p class="username-text  pt-3 pl-5"> <i class="fa-regular fa-user"></i>   <%= user.name %></p>
        </div>
       <a href="/profile" class="btn btn-light btn-block btn-sidebar sidebar-link pt-3">Account Overview</a>
        <a href="/address" class="btn btn-light btn-block btn-sidebar pt-3">Manage Address</a>
        <a href="/order" class="btn btn-light btn-block btn-sidebar  pt-3">Orders</a>
        <a href="/wishlist" class="btn btn-light btn-block btn-sidebar  pt-3">Wishlist</a>
        <a href="/wallet" class="btn btn-light btn-block btn-sidebar pt-3">Wallet</a>
    </div>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper" class="flex-grow-1 pl-3">
        <div class="container-fluid">
    <div class="col-md-12 pt-5">
        <div class="form-group">
            <h1 class="pt-3">Change Password</h1>
            <% if(typeof message !== 'undefined') { %>
                <p style="color:red;"><%= message %></p>
            <% } %>
            <form action="" method="POST">
                <div class="form-group">
                    <label for="currentPassword">Current Password</label>
                    <input type="password" class="form-control" name="currentPassword">
                </div>
                <div class="form-group">
                    <label for="newPassword">New Password</label>
                    <input type="password" class="form-control" name="newPassword">
                </div>
                <div class="form-group">
                    <label for="confirmPassword">Confirm Password</label>
                    <input type="password" class="form-control" name="confirmPassword">
                </div>
                <input type="hidden" name="user_id" value="<%= user._id %>">
                <button type="submit" class="btn probut">Update Password</button>
            </form>
        </div>
    </div>
    
    
    </div>
    </div>
    <!-- /#page-content-wrapper -->
</div>
</div>

<%- include('../layout/footer.ejs') %>